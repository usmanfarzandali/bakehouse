            <script type="text/javascript" src="/vpcs_pos_kitchen/static/src/js/Chrome.js"></script>
            <script type="text/javascript" src="/vpcs_pos_kitchen/static/src/js/ChromeWidgets/TicketButton.js"></script>
            <script type="text/javascript" src="/vpcs_pos_kitchen/static/src/js/Screens/ProductScreen/Orderline.js"></script>
            <script type="text/javascript" src="/vpcs_pos_kitchen/static/src/js/Screens/ProductScreen/ControlButtons/KitchenScreenButton.js"></script>
            <script type="text/javascript" src="/vpcs_pos_kitchen/static/src/js/Screens/TicketScreen/TicketScreen.js"></script>
            <script type="text/javascript" src="/vpcs_pos_kitchen/static/src/js/Screens/ProductScreen/ControlButtons/OrderPriorityButton.js"></script>
