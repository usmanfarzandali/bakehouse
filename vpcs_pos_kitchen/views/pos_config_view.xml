<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_form_inherited" model="ir.ui.view">
        <field name="name">pos.config.fields.inherited</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <div id="posbox_reference" position="after">
                <h2>POS Kitchen Screen</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="iface_is_kitchen"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="iface_is_kitchen"/>
                            <span class="fa fa-lg fa-cutlery" title="For Kitchen Screen"/>
                            <div class="text-muted">
                                Check to enable kitchen screen set as default.
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('iface_is_kitchen','=',True)]}">
                        <div class="o_setting_left_pane">
                            <field name="iface_btn_priority"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="iface_btn_priority" string="Order Priority"/>
                            <span class="fa fa-lg fa-star" title="Order Priority"/>
                            <div class="text-muted">
                                Check to enable order priority button.
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('iface_is_kitchen','=',True)]}">
                        <div class="o_setting_left_pane">
                            <field name="iface_btn_kitchen"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="iface_btn_kitchen" string="Kitchen Screen"/>
                            <span class="fa fa-lg fa-cutlery" title="For Kitchen Screen"/>
                            <div class="text-muted">
                                Check to enable kitchen screen button.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>