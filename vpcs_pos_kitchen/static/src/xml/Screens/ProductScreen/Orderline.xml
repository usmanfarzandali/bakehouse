<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="Orderline" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension" owl="1">
        <xpath expr="//ul[hasclass('info-list')]//li[hasclass('info')]" position="before">
            <t t-if="props.line.get_state()">
                <span t-attf-class="info orderline-state {{activeClass}}">
                    <t t-esc="props.line.get_state()" />
                </span>
            </t>
        </xpath>
    </t>

</templates>
