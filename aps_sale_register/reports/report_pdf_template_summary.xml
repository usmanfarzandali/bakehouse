<odoo>
    <template id="sale_register_summary_template_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
 <h2 style="text-align:center">Sale Register Report(Summary)</h2>
                    <br/>
                     <table class="oe_structure" style="margin-bottom:15px;">
                      <tr>
                          <td style="border:1px solid lightgrey;padding:5px;">Date From</td>
                           <td style="border:1px solid lightgrey;padding:5px;">
                           <t t-esc="wizard_data['date_from']"/>
                           </td>
                      </tr>
                       <tr>
                          <td style="border:1px solid lightgrey;padding:5px;">Date To</td>
                           <td style="border:1px solid lightgrey;padding:5px;"><t t-esc="wizard_data['date_to']"/></td>
                      </tr>
                  </table>
                    <div class="oe_structure"/>
                      <t t-set="total_sum" t-value="0"/>
                    <t t-set="total_sum1" t-value="0"/>
                    <table style="width:100%;margin:0px auto;background:white;border:1px solid #e1e1e1;"
                           class="table table-condensed">
                        <thead>
                            <tr style="font-size:10px">
                                <th class="text-center" style="border:1px solid lightgrey;">No</th>
                                <th class="text-center" style="border:1px solid lightgrey;">Date</th>
                                <th class="text-center" style="border:1px solid lightgrey;">Invoice No</th>
                                <th class="text-center" style="border:1px solid lightgrey;">OGP</th>
                                <th class="text-center" style="border:1px solid lightgrey;">SO#</th>
                                <th class="text-center" style="border:1px solid lightgrey;">Partner</th>
                                 <th class="text-center" style="border:1px solid lightgrey;">Sales Person</th>
                                <th class="text-center" style="border:1px solid lightgrey;">NTN</th>
                                <th class="text-center" style="border:1px solid lightgrey;">Discount</th>
                                <th class="text-center" style="border:1px solid lightgrey;">Amount Untaxed</th>
                                <th class="text-center" style="border:1px solid lightgrey;">Tax</th>
                                <th class="text-center" style="border:1px solid lightgrey;">Total</th>
                            </tr>
                        </thead>
                        <tbody class="consumed_tbody" style="font-size:9px">
                           <t t-set="serial_counter" t-value="0"/>
                            <t t-foreach="data" t-as="main">

                                <!--                                 <t t-if="main.partner_type == 'customer'"> -->
                                <t t-set="serial_counter" t-value="serial_counter+1"/>
                                <tr style="text-align: center;">
                                    <td style="border:1px solid lightgrey;">
                                            <t t-esc="serial_counter"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['date']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['invoice_no']"/>
                                    </td >
                                    <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['ogp']"/>
                                    </td>
                                    <td>
                                        <t t-esc="main['so']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['partner']"/>
                                    </td>
                                     <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['saleperson']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['ntn']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['discount']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['amount_untaxed']"/>
                                        <t t-set="total_sum" t-value="total_sum + main['amount_untaxed']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['tax']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;">
                                        <t t-esc="main['total']"/>
                                        <t t-set="total_sum1" t-value="total_sum1 + main['total']"/>
                                    </td>
                                </tr>
                                <!--                                                        </t>-->
                            </t>
                        </tbody>
                         <tr style="font-size:10px">


                                    <td style="padding:5px;border:1px solid lightgrey" colspan="9">
                                        <b>Total</b>
                                    </td>
                          <td style="padding:5px;border:1px solid lightgrey;text-align:center">
                                        <span t-esc="'{:,}'.format(total_sum)"/>
                                    </td>
                               <td style="padding:5px;border:1px solid lightgrey">
<!--                                        <span t-esc="'{:,}'.format(total_sum1)"/>-->
                                    </td>
                          <td style="padding:5px;border:1px solid lightgrey;text-align:center">
                                        <span t-esc="'{:,}'.format(total_sum1)"/>
                                    </td>
                         </tr>
                    </table>
                </div>
            </t>
        </t>

    </template>
</odoo>