<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_register_view" model="ir.ui.view">
            <field name="name">sale_register_view</field>
            <field name="model">sale.register.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title">
                        <field name="sale_type" options="{'horizontal': true}" class="oe_edit_only" widget="radio"/>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="order_number"/>
                            <field name="name" invisible="1" />
                            <field name="file" filename="name" invisible="1"  readonly="1" />
                        </group>
                        <group>
                            <field name="date_to"/>
                             <field name="categ_ids" widget="many2many_tags"   attrs="{'invisible': [('sale_type', '=', 'summary')]}"/>
                            <field name="product_ids"  attrs="{'invisible': [('sale_type', '=', 'summary')]}"/>
                            <field name="record_type"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Detail Report" name="generate_sale_register_xlsx" type="object"
                                default_focus="1" class="btn-primary" attrs="{'invisible': [('sale_type', '=', 'summary')]}"/>
                        <button string="Summary Report" name="generate_sale_register_summary_xlsx" type="object"
                                default_focus="1" class="btn-primary" attrs="{'invisible': [('sale_type', '=', 'detail')]}"/>

                        <button string="Summary Report PDF" name="generate_sale_register_summary_pdf" type="object" class="btn-primary" attrs="{'invisible': [('sale_type', '=', 'detail')]}"/>
                        <button string="Detail Report PDF" name="generate_sale_register_detail_pdf" type="object" class="btn-primary" attrs="{'invisible': [('sale_type', '=', 'summary')]}"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="sale_register_action" model="ir.actions.act_window">
            <field name="name">Sale Register</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.register.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale_register_view" />
            <field name="target">new</field>
        </record>

        <menuitem id="sale_register_menu" name="Sale Register" parent="sale.menu_sale_report"
                  action="sale_register_action"/>
    </data>
</odoo>
