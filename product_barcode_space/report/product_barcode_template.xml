	<template id="report_price_barcode">
		<div style="width: 100%; height:100%; text-align:center; font-size:15px; font-weight:bold;">
			<t t-if="product.barcode">
				<div>

<!--					here changes may122-->

<!--					<t t-esc="company.name"/><br/>-->
					<span t-field="product.display_name"/><br/>
					<t t-if="product.is_offer_product">
						Price:<del t-field="product.list_price"/><![CDATA[&nbsp;]]>
						Offer:<span t-field="product.offer_price"/><br/>
					</t>
					<t t-else="">
						Price:<span t-field="product.list_price"/><br/>
					</t>
						<t t-if="product.product_expiry">
						Expiry:<![CDATA[&nbsp;]]><span t-field="product.product_expiry"/>
					</t>
				</div>
				<div style="width:100%;">
					<img alt="Barcode"
						 t-if="len(product.barcode) == 13"
						 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product.barcode or ''), 900, 120)"
						 style="width:100%;height::100%;"/>
					<img alt="Barcode"
						 t-elif="len(product.barcode) == 8"
						 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 900, 120)"
						 style="width:100%;height::100%;"/>
					<img alt="Barcode"
						 t-else=""
						 t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 900, 120)"
						 style="width:100%;height::100%;"/>
					<span style="font-size:19px;" t-field="product.barcode"/>
				</div>
			</t>
			<t t-else=""><span class="text-muted">No barcode available</span></t>
		</div>
	</template>


