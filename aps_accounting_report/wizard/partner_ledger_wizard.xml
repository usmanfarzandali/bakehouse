<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="partner_ledger_wizard_view" model="ir.ui.view">
            <field name="name">partner_ledger_wizard_view</field>
            <field name="model">partner.ledger.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="partner_ids" widget="many2many_tags"/>
                            <field name="name" invisible="1"/>
                            <field name="file" filename="name" invisible="1" readonly="1"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                            <field name="partner_type"/>
                             <field name="companies" widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Print Xlsx Report" name="generate_partner_ledger_xlsx" type="object"
                                default_focus="1" class="btn-primary"/>
                        <button string="Print PDF Report" name="generate_partner_ledger_pdf" type="object"
                                default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="partner_ledger_action" model="ir.actions.act_window">
            <field name="name">Partner Ledger Custom</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.ledger.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="partner_ledger_wizard_view"/>
            <field name="target">new</field>
        </record>


        <menuitem id="partner_ledger_menu" name="Partner Ledger Custom" parent="office_root"
                  action="partner_ledger_action"/>
    </data>
</odoo>
