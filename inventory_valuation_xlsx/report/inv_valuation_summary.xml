<odoo>
    <template id="inv_value_summary_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 style="text-align:center">Product Valuation Summary</h2>
                   <div class="row" style="font-size:12px">
                        <table class="oe_structure" style="margin-bottom:15px;margin-left:20px;" width="35%">
                            <tr>
                                <td style="border:1px solid lightgrey;padding:5px;" width="30%">User</td>
                                <td style="border:1px solid lightgrey;padding:5px;">
                                    <t t-esc="Uuser"/>
                                </td>
                            </tr>
                            <t t-if="wizard_data.companies">
                            <tr>
                                <td style="border:1px solid lightgrey;padding:5px;">Company</td>
                                <td style="border:1px solid lightgrey;padding:5px;">
                                    <t t-foreach="wizard_data.companies" t-as="line">
                                        <span t-esc="line.name"/>
                                    </t>
                                </td>
                            </tr>
                            </t>
                            <tr>
                                <td style="border:1px solid lightgrey;padding:5px;">Date From</td>
                                <td style="border:1px solid lightgrey;padding:5px;">
                                    <t t-esc="wizard_data['date_from']"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border:1px solid lightgrey;padding:5px;">Date To</td>
                                <td style="border:1px solid lightgrey;padding:5px;"><t t-esc="wizard_data['date_to']"/></td>
                            </tr>
                        </table>
                        <table width="40%">

                        </table>
                        <table  width="20%">
                            <tr>
                                <td style="border:1px solid lightgrey;padding:5px;" >Printed Date</td>
                                <td style="border:1px solid lightgrey;padding:5px;">
                                    <t t-esc="DDate"/>
                                </td>
                            </tr>
                             <t t-if="wizard_data.categ_ids">
                                <tr>
                                    <td style="border:1px solid lightgrey;padding:5px;">Category</td>
                                     <td style="border:1px solid lightgrey;padding:5px;">
                                 <t t-foreach="wizard_data.categ_ids" t-as="cat">
                                        <span t-esc="cat.name"/>
                                    </t>
                                     </td>

                                </tr>
                            </t>
                        </table>

                    </div>
                    <br/>
                    <div class="oe_structure"/>

                    <table style="width:100%;margin:0px auto;background:white;border:1px solid #e1e1e1;"
                           class="table table-condensed">
                        <thead>
                            <tr>
                                 <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="3"> </th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="8">IN</th>
                                 <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="8">OUT </th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2"> </th>
                            </tr>
                            <tr>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Product </th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">Opening</th>
                                  <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">Purchase</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">Sale ret</th>
                            <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">Issue ret</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">Adjustment </th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">Purchase Ret </th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">Sale </th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">issue</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">Adjustment</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;" colspan="2">Closing</th>

                            </tr>



                            <tr style="font-size:10px">
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Product </th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Stock</th>
                                <th class="text-center" style="border:1px solid lightgrey;padding:5px;">Value</th>


                            </tr>
                        </thead>

                        <tbody class="consumed_tbody" style="font-size:10px">
                            <t t-foreach="data" t-as="main">
                                <!--                                <t t-if="main.partner_type == 'customer'">-->
                                <tr style="text-align: left;">
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['prod_name']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['opening']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['opening_bal']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['purchase']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['purchase_bal']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['sale_ret']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['sale_ret_bal']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['issue_ret']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['issue_ret_bal']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['inventory_out']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['inventory_out_bal']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['pur_ret']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['pur_ret_bal']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['sale']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['sale_bal']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['issue']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['issue_bal']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['inventory_in']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['inventory_in_bal']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['closing']"/>
                                    </td>
                                    <td style="border:1px solid lightgrey;padding:5px;">
                                        <t t-esc="main['closing_bal']"/>
                                    </td>
                                </tr>
                            </t>
                            <!--                            </t>-->
                        </tbody>

                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>