<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="stock_inventory_view_form" model="ir.ui.view">
		<field name="name">stock_inventory_view_form</field>
		<field name="model">stock.inventory</field>
		<field name="inherit_id" ref="stock.view_inventory_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='location_ids']" position="before">
				<field name="inventory_date" required="1" groups="inventory_date_adjustment.group_inventory_date_validation"/>
			</xpath>
		</field>
	</record>

	<record id="res_config_settings_view_inv_date_approval" model="ir.ui.view">
		<field name="name">res_config_settings_view_inv_date_approval</field>
		<field name="model">res.config.settings</field>
		<field name="priority" eval="15"/>
		<field name="inherit_id" ref="base.res_config_settings_view_form" />
		<field name="arch" type="xml">
			<xpath expr="//div[hasclass('settings')]" position="inside">
				<div class="app_settings_block" data-string="Inventory" string="Inventory" data-key="inventory_management">
					<h2>Inventory Days Limit Approval </h2>
					<div class="row mt16 o_settings_container">
						<div class="col-12 col-lg-12 o_setting_box">
							<div class="o_setting_left_pane">
							</div>
							<div class="o_setting_right_pane">
								<label for="days_approval"/>
								<field name="days_approval"/>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

</odoo>